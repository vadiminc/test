{
  "plugins": [
    "security",
    "filenames"
  ],
  "extends": [
    "standard",
    "plugin:security/recommended"
  ],
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-console": [2],
    "strict": [2, "never"],
    "object-curly-spacing": [2, "always"],
    "no-process-exit": 2,
    "filenames/match-regex": [2, "^[a-z0-9-]+$", true],
    "security/detect-object-injection": 0
  }
}
